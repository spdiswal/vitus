{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"extends": [
		"@rainstormy/presets-biome/base",
		"@rainstormy/presets-biome/vitest"
	],
	"files": {
		"ignore": ["dist/", "node_modules/"]
	},
	"linter": {
		"rules": {
			"nursery": {
				"noNestedTernary": "off"
			}
		}
	},
	"overrides": [
		{
			"include": ["src/explorer/**/*.tsx"],
			"linter": {
				"rules": {
					"nursery": {
						"noRestrictedImports": {
							"level": "error",
							"options": {
								"paths": {
									"clsx": "Use the 'cn' helper function instead of 'clsx'",
									"clsx/lite": "Use the 'cn' helper function instead of 'clsx'"
								}
							}
						}
					}
				}
			}
		},
		{
			"include": ["src/explorer/**/Use*.tsx"],
			"linter": {
				"rules": {
					"nursery": {
						"useComponentExportOnlyModules": "off"
					}
				}
			}
		},
		{
			"include": ["src/server/**/*"],
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					}
				}
			}
		},
		{
			"include": ["src/utilities/Logging.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		},
		{
			"include": ["src/VitusCli.ts", "src/VitusDev.ts"],
			"linter": {
				"rules": {
					"correctness": {
						"noNodejsModules": "off"
					},
					"suspicious": {
						"noConsoleLog": "off",
						"noConsole": "off"
					}
				}
			}
		}
	]
}
